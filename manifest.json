{
  "description": "A basic template for a Mozilla Rally Study.",
  "author": "Manoel Horta Ribeiro",
  "manifest_version": 2,
  "name": "Understanding YouTube",
  "version": "0.1",
  "homepage_url": "https://github.com/epfl-dlab/understanding_youtube",

  "applications": {
    "gecko": {
      "id": "ion-basic-study@mozilla.org",
      "strict_min_version": "77.0a1"
    }
  },

  "permissions": [
    "management",
    "<all_urls>",
    "downloads",
    "idle",
    "notifications",
    "storage",
    "cookies",
    "activeTab",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "history"
  ],
  "options_ui": {
    "page": "public/index.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": ["dist/background.js"]
  }
}
